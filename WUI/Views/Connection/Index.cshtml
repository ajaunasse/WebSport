@model WUI.Models.PersonneModel

@{
    ViewBag.Title = "Connexion";
}
@section AdditionalMeta
{
    @Styles.Render("~/Content/Home.css")
}


<div class="row">
    <div class="text-center col-md-9 offset-md-4">

        <div class="jumbotron jumbotron-fluid">
            <div class="headerJumbotron">
                <h3>Connectez-vous!!!</h3>
            </div>
            <div class="container">
                @using (Html.BeginForm(new {@class = "form"}))
                {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="form-group row">
                    <div class="col-4">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, new {@class = "form-control"})
                    </div>
                    <div class="col-4">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new {@class = "form-control"})
                    </div>
                    <div class="col-4">
                        <button type="submit" class="btn btn-outline-primary" id="valider"> <i class="material-icons">search</i> Valider</button>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</div>