@model WUI.Models.PersonneModel

@{
    ViewBag.Title = "Connexion";
}
@section AdditionalMeta
{
    @Styles.Render("~/Content/Login.css")
}
<div class="container content">
    <div class="row">
        <div class="col-lg-6">
            <div class="card register">
                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <div class="card-header">
                        <h2 class="titlePage">Nouveau ? Inscrivez-vous.</h2>
                    </div>
                    <div class="card-block">
                        @Html.LabelFor(m => m.Nom)
                        @Html.TextBoxFor(m => m.Nom, new { @class = "form-control" })
                        <br />
                        @Html.LabelFor(m => m.Prenom)
                        @Html.TextBoxFor(m => m.Prenom, new { @class = "form-control" })
                        <br />
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        <br />
                        @Html.LabelFor(m => m.DateNaissance)
                        @Html.TextBoxFor(m => m.DateNaissance, new { @class = "form-control", type = "date" })
                        <br />
                        @Html.LabelFor(m => m.Phone)
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                        <span style="color:red">@ViewBag.MessageErreurPhone</span>
                        <br />
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })

                        @Html.TextBoxFor(m => m.Role, new { @class = "form-control", @type = "hidden", @Value = "2" })
                        <br />
                        <button type="submit" class="btn btn-primary btn-block" id="valider"> Valider</button>
                    </div>
                }
            </div>
        </div>
    <div class="col-lg-6">
        <div class="card register">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="card-header">
                    <h2 class="titlePage">Ou connectez vous</h2>
                </div>
                <div class="card-block">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    <br />
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    <br />
                    <button type="submit" class="btn btn-primary btn-block" id="valider"> Valider</button>
                </div>

            }
        </div>
    </div>
    </div>
</div>


