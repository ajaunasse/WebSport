@model WUI.Models.PersonneModel



@{
    ViewBag.Title = "Connexion";
}
@section AdditionalMeta
{
    @Styles.Render("~/Content/Home.css")
}


<div class="row">
    <div class="text-center col-md-9 offset-md-4">

        <div class="jumbotron jumbotron-fluid">
            <div class="headerJumbotron">
                <h3>Inscrivez-vous!!!</h3>
            </div>
            <div class="container">
                @using (Html.BeginForm(new { @class = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div class="form-group">
                        <div class="row">
                            <div class="col-4">
                                @Html.LabelFor(m => m.Nom)
                                @Html.TextBoxFor(m => m.Nom, new {@class = "form-control"})
                            </div>
                            <div class="col-4">
                                @Html.LabelFor(m => m.Prenom)
                                @Html.TextBoxFor(m => m.Prenom, new {@class = "form-control"})
                            </div>
                            <div class="col-4">
                                @Html.LabelFor(m => m.Email)
                                @Html.TextBoxFor(m => m.Email, new {@class = "form-control"})
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                @Html.LabelFor(m => m.DateNaissance)
                                @Html.TextBoxFor(m => m.DateNaissance, new { @class = "form-control", type = "date" })
                            </div>
                            <div class="col-4">
                                @Html.LabelFor(m => m.Phone)
                                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                                <span style="color:red">@ViewBag.MessageErreurPhone</span>
                            </div>  
                            <div class="col-4">
                                @Html.LabelFor(m => m.Password)
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-4">
                            @Html.TextBoxFor(m => m.Role, new {@class = "form-control", @type = "hidden", @Value = "2"})
                        </div>
                        <div class="col-4 offset-4">
                            <button type="submit" class="btn btn-outline-primary" id="valider"> <i class="material-icons">search</i> Valider</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
