<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
        <meta charset="utf-8" />
        <title>WebSport | @ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
              rel="stylesheet">
        @Styles.Render("~/Content/Site.css")
        @Styles.Render("~/Content/Bootstrap/bootstrap.min.css")
        @RenderSection("AdditionalMeta", true)

        <script>
            $("#dropdown").select2({
                theme: "bootstrap"
            });

        </script>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/select2-bootstrap-theme/0.1.0-beta.6/select2-bootstrap.css" rel="stylesheet" />

    </head>
    <body>
        <header>
             @Html.Partial("_Menu")
        </header>
        <div class="container container-table">
                @RenderBody()
        </div>


        @Scripts.Render("~/Scripts/jquery-1.10.2.js")
        @Scripts.Render("~/Scripts/Bootstrap/bootstrap.js")

    </body>
</html>
