@using WUI.Models
@model IEnumerable<RaceModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="row adminContent">
    <div class="col-lg-12">
        <h3 class="titlePage">Liste des courses
            
        </h3>
        <a href="@Url.RouteUrl("add_course")" class="btn btn-success pull-right withIcon"> <i class="material-icons">add</i> Créer une course</a>
        <hr />
        <br />
        <table class="table">
            <thead>
                  <tr>
                      <th >#</th>
                      <th>Nom</th>
                      <th>Ville</th>
                      <th>Date de l'épreuve</th>
                      <th>Date de fin d'inscription</th>
                      <th>Action</th>
                  </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                <tr>
                    <td scope="row">@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Town</td>
                    <td>@item.DateStart.ToString("yyyy-MM-dd")</td>
                    <td>@item.DateEnd.ToString("yyyy-MM-dd")</td>
                    <td> 
                        <a href="@Url.Action("Edit", "Race", new { id = item.Id})" class="btn btn-outline-primary btn-sm"><i class="material-icons">mode_edit</i></a>
                        @*<a href="@Url.Action("DeleteRace", "Race", new { idRace = item.Id, @class = "delete" })" class="btn btn-outline-danger btn-sm"><i class="material-icons">delete_forever</i></a>*@
                    </td>
                </tr>
                }


            </tbody>
        </table>

    
    </div>
</div>
