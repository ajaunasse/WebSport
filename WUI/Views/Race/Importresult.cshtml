@{
    ViewBag.Title = "Importresult";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="row adminContent">
    <div class="col-lg-12">
        <h2>Importer les resultats</h2>
        <hr />
    </div>
    
    <div class="loading" style="display: none;">Loading&#8230;</div>
    <div class="col-lg-12">
        @using (Html.BeginForm("Import", "Race", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form" }))
        {
            <div class="row">
                <input type="file" id="FileResult" name="FileResult" size="23" />
            </div>
            <br />
            <div class="row">
                <input type="submit" value="Upload file" class="btn btn-success"/>
            </div>
            <br/>
            <div>
                <div class="row">
                    <h5><u>Format du fichier à importer :</u></h5>
                </div>
                <div class="row">
                    <h6>"ID Participant";"ID Course";"Classement";"Temps de Course";"Heure départ";"Heure arrivée"</h6>
                </div>
                <div class="row">
                    <h5>Les champs doivent être séparés par un point-virgule sans espace. un participant par ligne.</h5>
                </div>
            </div>
        }
    </div>
</div>

@section scripts {
<script>
    $(function () {
        $('.form').on('submit', function () {
            $('.loading').show();
        })
    });
</script>

}