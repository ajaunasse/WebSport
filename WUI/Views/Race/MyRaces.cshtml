@model List<WUI.Models.RaceModel>


<div class="row adminContent">
    <div class="col-lg-12">
        <h3 class="titlePage">
            Mes courses

        </h3>

        <hr />
        <br/>
        @if (Model.Count != 0)
        {
            <table class="table">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Date début</th>
                    <th>Date Fin</th>
                    <th>Desinscription</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.DateStart</td>
                        <td>@item.DateEnd</td>
                        <td>
                            <a href="@Url.Action("Unsubscribe", "Race", new {idRace = item.Id})" class="btn btn-primary btn-block">Se désinscrire</a>

                        </td>
                    </tr>
                }


                </tbody>
            </table>
        }
        else
        {
            <h4>Vous n'êtes inscrit à aucune course!!</h4>
        }


    </div>
</div>