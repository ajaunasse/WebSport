@model List<WUI.Models.RaceModel>




<div class="row adminContent">
    <div class="col-lg-12">
        <h3 class="titlePage">
            Liste des courses

        </h3>
        
        <hr />
        <br />
        <table class="table">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Date début</th>
                    <th>Date Fin</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.DateStart</td>
                        <td>@item.DateEnd</td>
                        <td>
                            <a href="@Url.Action("Suscribe", "Race", new { idRace = item.Id})" class="btn btn-primary btn-block">S'inscrire</a>
                            
                        </td>
                    </tr>
                }


            </tbody>
        </table>


    </div>
</div>


